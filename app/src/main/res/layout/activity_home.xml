<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:id="@+id/spedometrRel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hour"
            android:text="$/hour"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

        <pl.pawelkleczkowski.customgauge.CustomGauge
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headProgressBAQR"
            android:layout_below="@+id/hour"
            android:layout_centerHorizontal="true"
            app:gaugePointEndColor="#116498"
            app:gaugePointStartColor="#ffffff"
            app:gaugeStartValue="200"
            app:gaugeEndValue="800"
            app:gaugePointSize="150"
            app:gaugeStrokeCap="ROUND"
            app:gaugeStrokeColor="#bdbdbd"
            app:gaugeStrokeWidth="20dp"
            app:gaugeStartAngle="135"
            app:gaugeSweepAngle="270" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headerText"
            android:text="150"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="50sp"
            android:textColor="#bdbdbd"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/speedRel"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startSpeed"
                android:text="0"
                android:textColor="@color/white"

                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/endSpeed"
                android:text="270"
                android:layout_marginStart="260dp"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigImgRel"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spedometrRel">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_dot_of"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_dot"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_dot_of"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottomFragCont"
        android:background="@drawable/backgraund_fragment"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/navigImgRel">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textOfProgBar"
            android:text="goal $/month"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressRel"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textOfProgBar">

            <ProgressBar
                android:layout_width="350dp"
                android:layout_height="25dp"
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/linear_progress"
                android:progress="50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/onProgSpeed"
                android:text="900"
                android:textStyle="normal"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGraf"
            android:text="work intensity"
            android:layout_below="@+id/progressRel"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/textGraf"
            android:id="@+id/grafRel"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imgGraf"
                android:src="@drawable/grafline"
                android:paddingBottom="15dp"/>

<!--            <com.jjoe64.graphview.GraphView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="200dip"-->
<!--                android:id="@+id/graph"-->

<!--                app:seriesColor="#ee0000" />-->
            <ir.farshid_roohi.linegraph.LineChart
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lineChart"
                android:orientation="horizontal"
                app:chart_padding_bottom="40dp"
                app:chart_padding_left="20dp"
                app:chart_padding_right="20dp"
                app:chart_padding_top="25dp"
                app:chart_line_color="#00000000"
                app:chart_bg_color="#00000000"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timerRel"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/imgUp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/backgraund_up_down"
                android:src="@drawable/ic_to_up"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textTimer"
                android:text="TIMER"
                android:textSize="23sp"
                android:layout_below="@+id/imgUp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>